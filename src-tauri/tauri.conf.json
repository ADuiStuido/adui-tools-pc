{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ADui Tools",
  "version": "0.0.1",
  "identifier": "com.adui.adui-tools-pc",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:18080",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build-only"
  },
  "app": {
    "windows": [
      {
        "title": "ADui Tools",
        "width": 1100,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
